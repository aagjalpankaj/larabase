{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laralaunch/the-boilerplate",
    "type": "project",
    "description": "Laravel boilerplate: Start fast, build right.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "laravel/framework": "^11.39"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.4",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/tinker": "^2.9",
        "laravel/pint": "^1.19",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-laravel": "^3.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "lint": "XDEBUG_MODE=off pint --test",
        "lint.fix": "XDEBUG_MODE=off pint",
        "stan": "XDEBUG_MODE=off phpstan analyse --ansi --memory-limit=-1",
        "test.arch": "XDEBUG_MODE=off pest --testsuite=Architecture",
        "test.unit": "XDEBUG_MODE=off pest --testsuite=Unit",
        "test.feature": "XDEBUG_MODE=coverage pest --testsuite=Feature --coverage --min=90",
        "rector": "XDEBUG_MODE=off rector process --dry-run",
        "rector.fix": "XDEBUG_MODE=off rector process",
        "ci": [
            "@lint",
            "@stan",
            "@rector",
            "@test.arch",
            "@test.unit",
            "@test.feature"
        ],
        "ci.fix": [
            "@rector.fix",
            "@lint.fix"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
